---
kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: geoserver-data
spec:
  storageClassName: ""
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 5Gi
---
{% if minikube -%}
apiVersion: v1
kind: PersistentVolume
metadata:
 name: pv0002
spec:
 accessModes:
   - ReadWriteOnce
 capacity:
   storage: 5Gi
 hostPath:
   path: "/data/pv0002"
{% else -%}
apiVersion: v1
kind: PersistentVolume
metadata:
  name: pv0002
spec:
  accessModes:
    - ReadWriteOnce
  capacity:
    storage: 5Gi
  gcePersistentDisk:
    pdName: {{ gce_disk_name }}
    fsType: ext4

{% endif %}
---
apiVersion: batch/v1
kind: Job
metadata:
  name: geoserver-data
spec:
  template:
    metadata:
      labels:
         name: geoserver-data
    spec:
      restartPolicy: Never
      containers:
      - name: geoserver-data
        image: gcr.io/{{ GOOGLE_CLOUD_PROJECT }}/geoserver-data
        imagePullPolicy: IfNotPresent
        volumeMounts:
        - name: geoserverdata
          mountPath: /geoserver_data
      volumes:
      - name: geoserverdata
        persistentVolumeClaim:
          claimName: geoserver-data
