---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  creationTimestamp: null
  name: geonode
spec:
  replicas: 1
  template:
    metadata:
      creationTimestamp: null
      labels:
        name: geonode
    spec:
      containers:
        - image: gcr.io/{{ GOOGLE_CLOUD_PROJECT }}/nginx
          imagePullPolicy: Always
          name: nginx
          ports:
            - containerPort: 443
            - containerPort: 80
      restartPolicy: Always
---
metadata:
  name: geonode
  labels:
    name: geonode
kind: Service
apiVersion: v1
spec:
  type: NodePort
  ports:
    - port: 80
      protocol: TCP
      name: http
      targetPort: 80
    - port: 443
      protocol: TCP
      name: https
      targetPort: 443
  selector:
    name: geonode
